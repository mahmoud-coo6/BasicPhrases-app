<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example2.acer.basicphrases.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         >

        <Button
            android:text="do yous peak"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/doyouspeakenglish"
            android:onClick="buttomTapped"
            android:layout_height="115dp" />

        <Button
            android:text="good evening"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="buttomTapped"
            android:id="@+id/goodevening" />

        <Button
            android:text="how are you"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:onClick="buttomTapped"
            android:layout_rowWeight="1"
            android:id="@+id/howareyou"
            android:layout_height="120dp" />
        <Button
            android:text="i live in"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="buttomTapped"
            android:id="@+id/ilivein"
            android:layout_width="wrap_content"
            android:layout_height="120dp" />
        <Button
            android:text="my name is"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="buttomTapped"
            android:id="@+id/mynameis"
            android:layout_height="120dp" />
        <Button
            android:text="please"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="buttomTapped"
            android:id="@+id/please"
            android:layout_height="115dp" />

        <Button
            android:text="hello"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="buttomTapped"
            android:id="@+id/hello"
            android:layout_height="120dp" />

        <Button
            android:text="welcome"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="buttomTapped"
            android:id="@+id/welcome" />

    </GridLayout>
</RelativeLayout>
